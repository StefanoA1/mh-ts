{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "ES2022",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "moduleResolution": "node"
    }
  },
  "exclude": ["node_modules"],
}
